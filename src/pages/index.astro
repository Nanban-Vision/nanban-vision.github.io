---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/Banner.astro'; 

import Home from '../components/Home.astro'; 
import About from '../components/About.astro'; 
import Nanban from '../components/Nanban.astro'; 
import Store from '../components/Store.astro'; 
import Gallery from '../components/Gallery.astro'; 
import Contact from '../components/Contact.astro'; 

import '../styles/index.css'; 
import { Image } from 'astro:assets';
const title = "Nanban";
---

<Layout title={title}>
  <div class="scroll-container">
    <Banner />
    <Home />
    <About />
    <Nanban />
    <Store />
    <Gallery />
    <Contact />
  </div>
</Layout>

<script>
  import { animationVisibility } from '../scripts/animationVisibility.ts';
  import { checkSectionVisibility } from '../scripts/checkSectionVisibility.ts';

  animationVisibility();
  checkSectionVisibility();
</script>
