---
import "../styles/Banner.css";
import { Image } from 'astro:assets';
import sidebar_icon from '../assets/sidebar-icon.png';
---

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
  <button class="toggle-sidebar"><Image src={sidebar_icon} alt="Menu" class="social-icon"></button> 
  <div class="banner">
    <nav class="nav-links">
      <div class="left-links">
        <a href="#home">Home</a>
        <a href="#about">About</a>
        <a href="#nanban">Nanban</a>
        <a href="#store">Store</a>
        <a href="#contact">Contact</a>
        <a href="#gallery">Gallery</a>
      </div>
    </nav>
  </div>

  <div class="sidebar">
    <a href="#home">Home</a>
    <a href="#about">About</a>
    <a href="#nanban">Nanban</a>
    <a href="#store">Store</a>
    <a href="#contact">Contact</a>
    <a href="#gallery">Gallery</a>
  </div>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const toggleButton = document.querySelector('.toggle-sidebar');
      const sidebar = document.querySelector('.sidebar');

      if (toggleButton && sidebar) {
        toggleButton.addEventListener('click', () => {
          sidebar.classList.toggle('active');
        });
      } else {
        console.warn('Toggle button or sidebar is not present in the DOM');
      }
    });
  </script>
</body>
